@model SMS.Asignaciones.Models.Feriado

@{
    Layout = null;
}


<div class="row">
    <div class="col-md-12">
        <form asp-action="AddOrEdit" asp-route-id="@Model.Id" onsubmit="return jQueryAjaxPost(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Fecha" class="control-label"></label>
                <input asp-for="Fecha" class="form-control" id="datepicker" />
                <span asp-validation-for="Fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Motivo" class="control-label"></label>
                <input asp-for="Motivo" class="form-control" id="Motivo" />
                <span asp-validation-for="Motivo" class="text-danger"></span>
            </div>

            <div class="mt-3">

                <button type="submit" class="btn btn-danger btn-sm text-white pull-right">
                    <i class="fa fa-check text-white"></i>
                    @(Model.Id > 0 ? "Actualizar" : "Crear")
                </button>

                <button type="button" class="btn btn-sm btn-dark text-white" data-dismiss="modal">
                    <i class="fa fa-close text-white"></i> Cancelar
                </button>

            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

<script>


        $(document).ready(function () {
           $(function () {
               $("#datepicker").datepicker({
                   defaultDate: new Date(), dateFormat: "yy-mm-dd", changeMonth: true,
                   changeYear: true, });
           });
        });

</script>
}
