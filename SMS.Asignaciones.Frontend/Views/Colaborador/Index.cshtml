@model IList<SMS.Asignaciones.Models.Colaborador>
@{
    Layout = "_Layout";
}

<br />

<div class="row">
    <div class="col-lg-12">
        <div class="header-instructivo bg-light sombra-instructivo">
            <i class="fa fa-circle text-danger"></i> <strong>Colaboradores</strong>
        </div>
    </div>
</div>

<br />
<div class="row">
    <div class="col-lg-12">

        <div class="mb-2">
            <a onclick="showInPopupLg('@Url.Action("_CreateOrEdit","Colaborador",new {id=0},Context.Request.Scheme)','Nuevo','Legajo')" class="btn btn-sm btn-danger text-white" style="cursor:pointer;">
                <i class="fa fa-plus text-white"></i> Nuevo
            </a>
        </div>

        <div id="view-all">
        </div>

        <button class="btn btn-success btn-sm" id="btnExportar">
            <i class="fa fa-file-excel-o text-white"></i> Exportar
        </button>

    </div>
</div>


@section scripts {

    <script>

        $(document).ready(function () {
            $('#view-all').load('@Url.Action("_ViewAll", "Colaborador")');


            $('#btnExportar').click(function () {
                window.location.href = '/Colaborador/Excel';
            });

        });



    </script>

}