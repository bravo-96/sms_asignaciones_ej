@model SMS.Asignaciones.Frontend.Models.ModificaDatosViewModel
@{
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="ModificaDatos" asp-route-id="@Model.ColaboradorId" onsubmit="return jQueryAjaxPostModificaDatos(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ColaboradorId" />
            <input type="hidden" asp-for="FotoActual" />

            <div class="form-group row">
                <div class="col-sm-12" style="text-align:center;">
                    @{
                        var base64 = Convert.ToBase64String(Model.FotoActual);
                        var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                    }

                    <img class="avatar-edicion" src="@imgSrc" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-6">
                    <label asp-for="NewPassword" class="control-label"></label>
                    <input asp-for="NewPassword" type="password" class="form-control" id="NewPassword" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
                <div class="col-sm-6">
                    <label asp-for="ConfirmaNewPassword" class="control-label"></label>
                    <input asp-for="ConfirmaNewPassword" type="password" class="form-control" id="ConfirmaNewPassword" />
                    <span asp-validation-for="ConfirmaNewPassword" class="text-danger"></span>
                </div>
            </div>

            <div class="mt-3">

                <button type="submit" class="btn btn-danger btn-sm text-white pull-right">
                    <i class="fa fa-check text-white"></i>
                    Modificar
                </button>

                <button type="button" class="btn btn-sm btn-dark text-white" data-dismiss="modal">
                    <i class="fa fa-close text-white"></i> Cancelar
                </button>

            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
