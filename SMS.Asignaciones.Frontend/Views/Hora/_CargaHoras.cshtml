@model SMS.Asignaciones.Frontend.Models.HorasAsignadas

@{
    Layout = null;
}

<div class="row">
    <div class="col-md-12">
        <form asp-action="Cargar" asp-route-id="@Model.ColaboradorId" onsubmit="return jQueryAjaxPostHoras(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ColaboradorId" />
            <input type="hidden" asp-for="Anio" />
            <input type="hidden" asp-for="Mes" />
            <input type="hidden" asp-for="AsignacionId" />
            <input id="ColaboradorIdSeleccionado" type="hidden" asp-for="ColaboradorIdSeleccionado" />

            <div class="form-group row">
                <div class="col-sm-8">
                    <label class="control-label">Proyecto</label>
                    <select asp-for="ProyectoId" class="form-control" asp-items="ViewBag.ProyectoId"></select>
                    <span asp-validation-for="ProyectoId" class="text-danger"></span>
                </div>
                <div class="col-sm-4">
                    <label asp-for="Horas" class="control-label"></label>
                    <input asp-for="Horas" type="number" class="form-control form-control-sm" id="Horas" />
                    <span asp-validation-for="Horas" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group input-group-sm  row">
                <div class="col-sm-12">
                    <label asp-for="HorasExtra" class="control-label"></label>
                    <input asp-for="HorasExtra" type="checkbox" id="HorasExtra" />
                    <span asp-validation-for="HorasExtra" class="text-danger"></span>
                </div>
            </div>



            <div class="mt-3">

                <button type="submit" class="btn btn-danger btn-sm text-white pull-right">
                    <i class="fa fa-check text-white"></i>
                    Cargar
                </button>

                <button type="button" class="btn btn-sm btn-dark text-white" data-dismiss="modal">
                    <i class="fa fa-close text-white"></i> Cancelar
                </button>

            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
