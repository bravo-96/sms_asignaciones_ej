@model SMS.Asignaciones.Models.Periodo

@{
    Layout = null;
}


<div class="row">
    <div class="col-md-12">
        <form asp-action="AddOrEdit" asp-route-id="@Model.Id" onsubmit="return jQueryAjaxPost(this);">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group row">
                <div class="col-sm-6">
                    <label asp-for="Anio" class="control-label"></label>
                    <select id="Anio" asp-for="Anio" class="form-control" asp-items="ViewBag.Anio"></select>
                    <span asp-validation-for="Anio" class="text-danger"></span>
                </div>
                <div class="col-sm-6">
                    <label asp-for="Mes" class="control-label"></label>
                    <select id="Mes" asp-for="Mes" class="form-control" asp-items="ViewBag.Mes"></select>
                    <span asp-validation-for="Mes" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">

                <div class="col-sm-3">
                    <label class="control-label">Habilitado:</label>
                    <input asp-for="Habilitado" type="checkbox"  style="width:20px; height:20px;" id="Habilitado" />
                    <span asp-validation-for="Habilitado" class="text-danger"></span>
                </div>
            </div>

            <div class="mt-3">

                <button type="submit" class="btn btn-danger btn-sm text-white pull-right">
                    <i class="fa fa-check text-white"></i>
                    @(Model.Id > 0 ? "Actualizar" : "Crear")
                </button>

                <button type="button" class="btn btn-sm btn-dark text-white" data-dismiss="modal">
                    <i class="fa fa-close text-white"></i> Cancelar
                </button>

            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
