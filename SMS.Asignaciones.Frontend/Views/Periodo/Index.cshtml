@model IList<SMS.Asignaciones.Models.Periodo>
@{
    Layout = "_Layout";
}

<br />

<div class="row">
    <div class="col-lg-12">
        <div class="header-instructivo bg-light sombra-instructivo">
            <i class="fa fa-circle text-danger"></i> <strong>Per&iacute;odos</strong>
        </div>
    </div>
</div>

<br />
<div class="row">
    <div class="col-lg-12">

        <div class="mb-2">
            <a onclick="showInPopup('@Url.Action("_CreateOrEdit","Periodo",new {id=0},Context.Request.Scheme)','Nuevo Período','Anio')" class="btn btn-sm btn-danger text-white" style="cursor:pointer;">
                <i class="fa fa-plus text-white"></i> Nuevo
            </a>
        </div>

        <div id="view-all">
        </div>

    </div>
</div>


@section scripts {

    <script>

        $(document).ready(function () {
            $('#view-all').load('@Url.Action("_ViewAll", "Periodo")');
        });



    </script>

}